<!DOCTYPE html>
<html>
<head>
  <title>Your Cart</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <!-- ✅ Latest Bootstrap 5.3.3 CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <!-- ✅ Your Custom Styles -->
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- Navbar Page -->
    <nav class="navbar navbar-expand-lg navbar-light" id="nav">
      <div class="container" id="container">
        <a class="navbar-brand" href="/">MyStore</a>
        <button 
        class="navbar-toggler" 
        type="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#navbar" 
      >
       <span class="navbar-toggler-icon"></span>
       </button>

        <div class="collapse navbar-collapse" id="navbar">
          <ul class="navbar-nav ms-auto dropdown">
            <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
            <li class="nav-item"><a href="/shop" class="nav-link">Shop</a></li>
            <li class="nav-item">
              <a href="/about" class="nav-link">About</a>
            </li>
            <li class="nav-item">
              <a href="/contact" class="nav-link">Contact</a>
            </li>
        </div>
      </div>
    </nav>


<div class="container mt-5">
  <h2>Your Cart Detail</h2>

  <% if (cartItems.length === 0) { %>
    <div class="alert alert-warning">Your cart is empty.</div>
  <% } else { %>
    <div class="responsive-table">
    <table class="table table-bordered mt-4">
      <thead class="table-dark">
        <tr>
          <th>S:No</th>
          <th>Image</th>
          <th>Name</th>
          <th>Detail</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Id</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% cartItems.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><img src="/uploads/<%= item.image %>" style="width:100%;height: 50px;"></td>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td>Rs <%= item.price %></td>
            <td><%= item.quantity %></td>
            <td>Rs <%= item.price * item.quantity %></td>
            <td><%= item.category %></td>
            <td class="d-flex">
              <a href="/viewproduct/<%= item.id %>" class="btn btn-sm btn-info m-1">View</a>
              <a href="/dlcart/<%= item.id %>" class="btn btn-sm btn-danger m-1"><i class='bx bx-message-x'></i></a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    </div>
    <!-- <div class="text-end">
      <a href="/cart/summary" class="btn btn-primary">Proceed to Summary</a>
    </div> -->
  <% } %>
</div>

<!-- Footer -->
    <footer>
      &copy; 2025 MyStore. All Rights Reserved.
    </footer>
<!-- ✅ Latest JS (same version)-->
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
